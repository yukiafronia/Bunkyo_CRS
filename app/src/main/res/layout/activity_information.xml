<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.yukihiramatsu.bunkyo_crs.Information">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="519dp"
            tools:layout_editor_absoluteY="8dp"
            tools:ignore="MissingConstraints,UselessLeaf"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:weightSum="1"
            android:baselineAligned="false">

        <TextView
                android:background="@drawable/partsdesign_day"
                android:text="大学からのお知らせ(全体)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textSize="25sp"
                tools:ignore="HardcodedText,InefficientWeight"
                android:textColor="#000000"/>

        <TextView
                android:background="@drawable/partsdesign_day"
                android:layout_width="395dp"
                android:layout_height="145dp"
                android:id="@+id/textView9"
                />

        <TextView
                android:background="@drawable/partsdesign_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView14"
                android:text="大学からのお知らせ(個人向け)"
                android:textSize="25sp"
                tools:ignore="HardcodedText"
                android:textColor="@android:color/black"/>

        <TextView
                android:background="@drawable/partsdesign_day"
                android:layout_width="395dp"
                android:layout_height="145dp"
                android:id="@+id/textView15"/>

        <TextView
                android:background="@drawable/partsdesign_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView16"
                android:text="課題提出状況"
                android:textSize="25sp"
                tools:ignore="HardcodedText"
                android:textColor="@android:color/black"/>

        <TextView
                android:background="@drawable/partsdesign_day"
                android:layout_width="395dp"
                android:layout_height="145dp"
                android:id="@+id/textView17"/>

    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="412dp"
            android:layout_height="67dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:baselineAligned="false">

        <ImageButton
                android:background="@drawable/partsdesign"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/calender"
                android:id="@+id/imageButton13"
                android:layout_weight="0.73"
                android:contentDescription=""
                tools:ignore="ContentDescription"/>

        <ImageButton
                android:background="@drawable/partsdesign"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                app:srcCompat="@drawable/information"
                android:id="@+id/imageButton12"
                android:layout_weight="0.66"
                android:contentDescription=""
                tools:ignore="ContentDescription"/>

        <ImageButton
                android:background="@drawable/partsdesign"
                android:layout_width="wrap_content"
                android:layout_height="76dp"
                app:srcCompat="@drawable/bus"
                android:id="@+id/imageButton11"
                android:layout_weight="0.81"
                tools:ignore="ContentDescription"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
